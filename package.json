{
  "name": "opencode-plugin-opencoder",
  "version": "0.1.0",
  "description": "OpenCode plugin providing autonomous development agents for continuous codebase improvement",
  "type": "module",
  "main": "src/index.ts",
  "files": [
    "src/",
    "agents/",
    "postinstall.mjs",
    "preuninstall.mjs"
  ],
  "scripts": {
    "postinstall": "node postinstall.mjs",
    "preuninstall": "node preuninstall.mjs",
